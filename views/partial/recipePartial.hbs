<div class="one-recipe">
  <section class="border1">
    <div class="header">
      {{!-- managing the changes of isFavorite recipes button --}}
      {{#if this.isUserFavourite}}
      <a href="/recipe/unsetFavourite/{{this._id}}" class="favorite-btn favorite">&hearts;</a>
      {{else}}
      <a href="/recipe/setFavourite/{{this._id}}" class="favorite-btn not-favorite">&hearts;</a>
      {{/if}}
      <img class="recipe-image" src="{{this.image}}">
      <div>
        <h4>
          <a href="/oneRecipe/{{this._id}}">{{this.name}}</a>
        </h4>
        <h4>Difficulty : <span class="difficulty-{{this.difficulty}}"></span></h4>
      </div>
    </div>
    <div class="details">
      <div>
        <span>Preparation time : {{this.prep}} min</span> <br>
        <span>Cooking time : {{this.cook}} min </span>
      </div>
      
      <table>
        <tr>
          <th colspan="6">Nutritious Value</th>
        </tr>
        <tr>
          <th class="table-head">Kcal</th>
          <th class="table-head">carbs</th>
          <th class="table-head">fiber</th>
          <th class="table-head">protein</th>
          <th class="table-head">sugars</th>
          <th class="table-head">salts</th>
        </tr>
        <tr>
          <td>{{this.nutrition.kcal}}kcal</td>
          <td>{{this.nutrition.carbs}}g</td>
          <td>{{this.nutrition.fiber}}g</td>
          <td>{{this.nutrition.protein}}g</td>
          <td>{{this.nutrition.sugars}}g</td>
          <td>{{this.nutrition.salts}}g</td>
        </tr>
      </table>
    </div>
  </section>
</div>